{
    "manifest_version": 3,
    "name": "Tweet to Picture",
    "version": "1.0",
    "description": "Convert tweets to pictures",
    "background": {
        "service_worker": "js/background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "js/content_scripts.js",
                "js/vendor.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ]
}
